<!DOCTYPE html>
<html>
<head>
    <title>Landing Page</title>
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/landing.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/classes_actions.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navigation_bar" style="background-color:#152935;">
        <div class="content" align="center" style="background-color:#25313D;">
            <h3 style="color: #FFFFFA;">Hi, <%= name %> (<%= email %>)!</h3>
            <h4 style="color: #FFFFFA;">Welcome to Time Helper!</h4>
            <img style="color: #FFFFFA;" class="user-profile" src="<%= picture %>" alt="picture" />
        </div>
        <div class="container collapse navbar-collapse navHeaderCollapse" style="width: 800px !important">
            <div class="row">
                <div class="col-sm-3 operations_options">
                    <button class="btn btn-primary btn-block" type="button" onclick="create_on_click_handler()">CREATE</button>
                </div>
                <div class="col-sm-3 operations_options">
                    <form class="form-horizontal" action="/read_classes" method="GET" name="outcome" id="outcome">
                        <fieldset>
                            <input type="hidden" class="form-control" id="allclasses" value="allclasses" name="allclasses"/>
                            <button id="read_classes" class="btn btn-primary btn-block" type="submit">READ</button>
                        </fieldset>
                    </form>
                </div>
                <div class="col-sm-3 operations_options">
                    <button class="btn btn-primary btn-block" type="button" onclick="update_on_click_handler()">UPDATE</button>
                </div>
                <div class="col-sm-3 operations_options">
                    <button class="btn btn-primary btn-block" type="button" onclick="delete_on_click_handler()">DELETE</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container form_details">
        <div id="create_class_form" style="display:none">
            <form class="form-horizontal" action="/create_class" method="GET" name="outcome" id="outcome">
                <fieldset>
                    <legend class="resizables"> New Record Information </legend>
                    <div class="form-group">
                        <label for="newday" class="col-lg-2 control-label">Enter class to be added:</label>
                        <div class="col-lg-10">
                            <input type="text" autocomplete="off" class="form-control" id="newday" placeholder="Enter Day"/>
                            <input type="text" autocomplete="off" class="form-control" id="newstart" placeholder="Enter Start Time"/>
                            <input type="text" autocomplete="off" class="form-control" id="newend" placeholder="Enter End Time"/>
                            <input type="text" autocomplete="off" class="form-control" id="newclass" placeholder="Enter Class"/>
                        </div>
                    </div>  
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button id="create_class_button" type="submit" class="btn btn-danger">Create Class</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div id="show_all_classes" style="display:none">
        </div>
    </div>

    <script>
        function create_on_click_handler() {
            console.log('create button clicked!');
            document.getElementById("create_class_form").style.display="block";
            document.getElementById("show_all_classes").style.display="none";
        }

        function update_on_click_handler() {
            console.log('update button clicked!');
        }

        function delete_on_click_handler() {
            console.log('delete button clicked!');
        }
    </script>
</body>
</html>

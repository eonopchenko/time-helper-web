<!DOCTYPE html>
<html>
<head>
    <title>Landing Page</title>
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/landing.css">
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/classes_actions.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navigation_bar" style="background-color:#152935;">
        <div class="content" align="center" style="background-color:#25313D;">
            <h3 style="color: #FFFFFA;">Hi, <%= name %> (<%= email %>)!</h3>
            <h4 style="color: #FFFFFA;">Welcome to Time Helper!</h4>
            <img style="color: #FFFFFA;" class="user-profile" src="<%= picture %>" alt="picture" />
        </div>
        <div class="container collapse navbar-collapse navHeaderCollapse" style="width: 800px !important">
            <div class="row">
                <div class="col-sm-3 operations_options">
                    <button class="btn btn-primary btn-block" type="button" onclick="create_on_click_handler()">CREATE</button>
                </div>
                <div class="col-sm-3 operations_options">
                    <form class="form-horizontal" action="/read_classes" method="GET" name="outcome" id="outcome">
                        <fieldset>
                            <input type="hidden" class="form-control" id="allclasses" value="allclasses" name="allclasses"/>
                            <button id="read_classes" class="btn btn-primary btn-block" type="submit">READ</button>
                        </fieldset>
                    </form>
                </div>
                <div class="col-sm-3 operations_options">
                    <button class="btn btn-primary btn-block" type="button" onclick="update_on_click_handler()">UPDATE</button>
                </div>
                <div class="col-sm-3 operations_options">
                    <button class="btn btn-primary btn-block" type="button" onclick="delete_on_click_handler()">DELETE</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container form_details">
        <div id="create_class_form" style="display:none">
            <form class="form-horizontal" action="/create_class" method="GET" name="outcome" id="outcome">
                <fieldset>
                    <legend class="resizables"> New Record Information </legend>
                    <div class="form-group">
                        <label for="newday" class="col-lg-2 control-label">Enter class to be added:</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="newday">
                                <option>Mon.</option>
                                <option>Tue.</option>
                                <option>Wed.</option>
                                <option>Thu.</option>
                                <option>Fri.</option>
                                <option>Sat.</option>
                                <option>Sun.</option>
                            </select>
                            <select class="form-control" id="newstart">
                                <option>8-30</option>
                                <option>9-00</option>
                                <option>9-30</option>
                                <option>10-00</option>
                                <option>10-30</option>
                                <option>11-00</option>
                                <option>11-30</option>
                                <option>12-00</option>
                                <option>12-30</option>
                                <option>13-00</option>
                                <option>13-30</option>
                                <option>14-00</option>
                                <option>14-30</option>
                                <option>15-00</option>
                                <option>15-30</option>
                                <option>16-00</option>
                                <option>16-30</option>
                                <option>17-00</option>
                                <option>17-30</option>
                                <option>18-00</option>
                            </select>
                            <select class="form-control" id="newend">
                                <option>11-30</option>
                                <option>12-00</option>
                                <option>12-30</option>
                                <option>13-00</option>
                                <option>13-30</option>
                                <option>14-00</option>
                                <option>14-30</option>
                                <option>15-00</option>
                                <option>15-30</option>
                                <option>16-00</option>
                                <option>16-30</option>
                                <option>17-00</option>
                                <option>17-30</option>
                                <option>18-00</option>
                                <option>18-30</option>
                                <option>19-00</option>
                                <option>19-30</option>
                                <option>20-00</option>
                                <option>20-30</option>
                                <option>21-00</option>
                            </select>
                            <select class="form-control" id="newtitle">
                                <option>ISCG7142 - Information Systems and Analysis</option>
                                <option>ISCG7144 - Internet Applications</option>
                                <option>ISCG7400 - Computer Systems Security</option>
                                <option>ISCG7401 - Advanced Data Communications</option>
                                <option>ISCG7402 - Network Design and Implementation</option>
                                <option>ISCG7404 - Computer Forensic Investigations</option>
                                <option>ISCG7410 - Information Systems Management</option>
                                <option>ISCG7413 - Testing and Quality Assurance Management</option>
                                <option>ISCG7414 - Business Systems Analysis</option>
                                <option>ISCG7420 - Web Application Development</option>
                                <option>ISCG7421 - Advanced Program Development</option>
                                <option>ISCG7422 - Multimedia Application Development</option>
                                <option>ISCG7424 - Mobile Software Development</option>
                                <option>ISCG7435 - Special Topic 1</option>
                                <option>ISCG7436 - Special Topic 2</option>
                            </select>
                        </div>
                    </div>  
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button id="create_class_button" type="submit" class="btn btn-danger">Create Class</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div id="created_class" style="display:none">
            <div class="alert alert-success">
                Class has been added to the database.
            </div>
        </div>
        <div id="show_all_classes" style="display:none">
        </div>
    </div>

    <script>
        function create_on_click_handler() {
            console.log('create button clicked!');
            document.getElementById("create_class_form").style.display="block";
            document.getElementById("show_all_classes").style.display="none";
            document.getElementById("created_class").style.display="none";
        }

        function update_on_click_handler() {
            console.log('update button clicked!');
            document.getElementById("create_class_form").style.display="none";
            document.getElementById("show_all_classes").style.display="none";
            document.getElementById("created_class").style.display="none";
        }

        function delete_on_click_handler() {
            console.log('delete button clicked!');
            document.getElementById("create_class_form").style.display="none";
            document.getElementById("show_all_classes").style.display="none";
            document.getElementById("created_class").style.display="none";
        }
    </script>
</body>
</html>
